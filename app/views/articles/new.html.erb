<div class="row">
  <div class="span6 offset3">
    <h1>Add Article</h1>
    <%= form_for @article do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_area :body, size: "60x12" %>
    <%= f.submit %>
    <%= link_to "Cancel", :back %>
    <% end %>
  </div>
</div>