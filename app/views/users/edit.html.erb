<h1>Edit Profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name %><br />

    <%= f.label :age %>
    <%= f.text_field :age %><br />

    <%= f.label :sex %>
    <%= f.select :sex, options_for_select(%w[Female Male]) %><br />

    <%= f.label :country %>
    <%= f.text_field :country %><br />

    <%= f.label :email %>
    <%= f.text_field :email %><br />

    <%= f.label :religion, "Religious disaffiliation" %>
    <%= f.select :religion, options_for_select(%w[Christianity Islam Hinduism Buddhism Judaism Scientology Other None]) %><br />

    <%= f.label :password %>
    <%= f.password_field :password %><br />

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %><br />
    <%= f.submit %>
    <% end %>

    <%= link_to "Delete User", @user, :method => :delete, :confirm => "Are you serious?" %>
</div>
</div>



