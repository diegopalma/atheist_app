<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "the atheist manifesto", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right"> <!-- #this was a <ul> -->
          <% if current_user %>
          <div class="logged_msg">Logged in as <%= link_to current_user.email, "users/#{current_user.id}" %> |
          <%= link_to "Log Out", session_path("current"), method: "delete" %></div>
          <% else %>
          <li><%= link_to "Sign Up",     signup_path %> </li>
          <li><%= link_to "Login",       signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>