<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "the atheist manifesto", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if current_user %>
          <li><%= link_to "Home", current_user %></li>
          <li><%= link_to "Edit", edit_user_path(current_user) %> </li>
          <li><%= link_to "Log Out", session_path("current"), method: "delete" %></li>
          <% else %>
          <li><%= link_to "Sign Up",     signup_path %> </li>
          <li><%= link_to "Login",       signin_path %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>